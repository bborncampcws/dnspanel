<p id="notice"><%= notice %></p>

<p>
  <b>Defaultip:</b>
  <%= @zone.defaultIp %>
</p>

<p>
  <b>Domain:</b>
  <%= @zone.domain %>
</p>

<p>
  <b>Serial:</b>
  <%= @zone.serial %>
</p>
<p>
  <b>Records:</b>
  <% @zone.records.each do |record| %>
    <p>
      <%= record.source %> 
      <%= record.recordType %> 
      <%= record.target %> 
      <%= link_to 'Edit', edit_zone_record_path(@zone,record) %> |
      <%= link_to 'Destroy', zone_record_path(@zone,record), :confirm => 'Are you sure?', :method => :delete %>
    </p>
  <% end %>

</br>
<h2>Add Zone Records</h2>
<%= form_for([@zone, @zone.records.build]) do |f| %>
  <div class="field">
    <%= f.label :source %>
    <%= f.text_field :source %>
  </div>
  <div class="field">
    <%= f.label :recordType %>
    <%= f.text_field :recordType %>
  </div>
  <div class="field">
    <%= f.label :target %>
    <%= f.text_field :target %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</br>

<%= link_to 'Edit', edit_zone_path(@zone) %> |
<%= link_to 'Back', zones_path %>
